<?xml version="1.0"?>
<project name="svn-core" basedir="." default="help">
  
  <property file="build.properties"/>

  <property name="core.output.dir" value="core.classes"/>
  <property name="co.dir" value="src.core"/>
  
  <!-- path to the svnant libraries. Usually they will be located in ANT_HOME/lib -->
  <path id="project.classpath">
	<fileset dir="${lib.dir}">
	  <include name="**/*.jar"/>
	</fileset>
  </path>  

  <path id="classpath">
	<fileset dir="all-3rd-party">
	  <include name="**/*.jar"/>
	</fileset>
  </path>  

  <target name="clean">
    <delete dir="${co.dir}"/>  
    <delete dir="${core.output.dir}"/>  
  </target>

  <target name="all" depends="clean, co.core.utilities, compile.core, copy.core, archive.core"/>

  <target name="checkout.core.utilities">
    <echo>Checking out CoreUtilities</echo>
	<!--svn><checkout url="http://coreutilities.googlecode.com/svn/trunk coreutilities-read-only" path="src_core" /></svn-->
	<svn><checkout url="http://coreutilities.googlecode.com/svn/trunk" path="src_core" /></svn>
  </target>
  
  <target name="co.core.utilities">
    <exec executable="${svn.exec}" searchpath="yes">
      <arg value="checkout"/>
      <arg value="http://coreutilities.googlecode.com/svn/trunk/"/>
      <arg value="${co.dir}"/>
    </exec>
  </target>
  
  <target name="compile.core" description="Compile Java source files" depends="co.core.utilities">
    <mkdir dir="${core.output.dir}"/>
    <javac destdir="${core.output.dir}" classpathref="classpath"
           debug="${javac.debug}" nowarn="${javac.nowarn}"
           deprecation="${javac.deprecation}" encoding="Cp1252" source="1.5"
           target="1.5">
      <compilerarg value="-Xlint:unchecked"/>
      <src path="${co.dir}/src"/>
    </javac>
  </target>
  
  <target name="copy.core" description="Copy files to output directory" depends="compile.core">
    <patternset id="copy.patterns">
      <include name="**/*.gif"/>
      <include name="**/*.jpg"/>
      <include name="**/*.jpeg"/>
      <include name="**/*.png"/>
      <include name="**/*.properties"/>
      <include name="**/*.xml"/>
      <include name="**/*-apf.xml"/>
      <include name="**/*.ejx"/>
      <include name="**/*.xcfg"/>
      <include name="**/*.cpx"/>
      <include name="**/*.dcx"/>
      <include name="**/*.sva"/>
      <include name="**/*.wsdl"/>
      <include name="**/*.ini"/>
      <include name="**/*.tld"/>
      <include name="**/*.tag"/>
      <include name="**/*.xlf"/>
      <include name="**/*.xsl"/>
      <include name="**/*.xsd"/>
      <include name="**/*.ttf"/>
    </patternset>
    <copy todir="${core.output.dir}">
      <fileset dir="${co.dir}/src">
        <patternset refid="copy.patterns"/>
      </fileset>
    </copy>
  </target>
  
  <target name="archive.core" depends="copy.core">
    <!--exec executable="cmd" output="manifest.mf" append="false" os="Windows XP">
      <arg value="/c"/>
      <arg value="echo"/>
      <arg value="Compile-Date:"/>
      <arg value="%DATE%"/>
      <arg value="%TIME%"/>
    </exec-->
    <mkdir dir="all-libs"/>
    <jar destfile="all-libs/coreutilities.jar" compress="true"> <!-- manifest="manifest.mf"-->
      <fileset dir="${core.output.dir}">
        <exclude name="**/*.cdi"/>
      </fileset>
    </jar>
  </target>

</project>
